@using Homework_03_27_PeopleListPost.Web.Models
@using PeopleListPost.Data
@model PeopleViewModel


<div b-ud2x8zyu5z class="container">
    <main b-ud2x8zyu5z role="main" class="pb-3">
        @if (Model.Message != null)
        {
            <div class="row">
                <div class="col-md-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
        }



        <div b-ud2x8zyu5z class="container">
            <main b-ud2x8zyu5z role="main" class="pb-3">
                <div class="row">
                    <div class="col-md-12">
                        <a href="/home/AddForm" class="btn btn-success">Add People</a>
                        <table class="table table-hover table-bordered">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Age</th>
                            </tr>
                            @foreach (Person p in Model.People)
                            {
                                <tr>
                                    <td>@p.FirstName</td>
                                    <td>@p.LastName</td>
                                    <td>@p.Age</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

            </main>
        </div>

    </main>
</div>